  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmFirstForm: TfrmFirstForm;

implementation

{$R *.dfm}

procedure TfrmFirstForm.btnClickMeClick(Sender: TObject);
begin
  inherited;
  SetMessage('Hello from runtime first form');
